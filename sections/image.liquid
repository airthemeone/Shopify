<div class="container mx-auto px-2 sm:px-4 xl:px-0">
    {% if section.settings.link %}
        <a href="{{ section.settings.link }}">
    {% endif %}

    {% include 'image', image_object: section.settings.image, alt: section.settings.image.alt, disable_lazyload: section.settings.disable_lazyload %}

    {% if section.settings.link %}
        </a>
    {% endif %}
</div>

{% schema %}
    {
        "name": "Image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "link",
                "label": "Link"
            },
            {
                "type": "checkbox",
                "id": "disable_lazyload",
                "label": {
                    "en": "Disable Lazyload"
                },
                "default": false
            }
        ],
        "presets": [
            {
                "name": "Image",
                "category": "Image",
                "settings": {}
            }
        ]
    }
{% endschema %}